<!DOCTYPE html>
<html>
<head>
  <title>Task 6</title>
</head>
<body>
  <button onclick="removeDivisibleByThree()">Remove ÷3</button>
  <button onclick="add100To150()">Add 100–150</button>
  <button onclick="addThreeToEach()">+3 Each</button>
  <button onclick="print20To40()">Print 20–40</button>
  <button onclick="shuffleAndSort()">Shuffle & Sort</button>

  <script>
    function createArray0to100() {
      return Array.from({ length: 101 }, (_, i) => i);
    }

    function removeDivisibleByThree() {
      let arr = createArray0to100();
      arr = arr.filter(num => num % 3 !== 0);
      console.log("Removed numbers divisible by 3:", arr);
    }

    function add100To150() {
      let arr = createArray0to100();
      arr = arr.concat(Array.from({ length: 51 }, (_, i) => i + 100));
      console.log("Added numbers 100 to 150:", arr);
    }

    function addThreeToEach() {
      let arr = createArray0to100();
      arr = arr.map(num => num + 3);
      console.log("+3 to each element:", arr);
    }

    function print20To40() {
      let arr = createArray0to100();
      const sliced = arr.slice(20, 41);
      console.log("Elements from index 20 to 40:", sliced);
    }

    function shuffleArray(array) {
      for (let i = array.length - 1; i > 0; i--) {
        let j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
    }

    function shuffleAndSort() {
      let arr = createArray0to100();
      shuffleArray(arr);
      console.log("Shuffled array:", arr);
      arr.sort((a, b) => b - a);
      console.log("Sorted descending:", arr);
    }
  </script>
</body>
</html>
